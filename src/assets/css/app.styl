/* ********** 其他变量 *********** */
$fontSize = 16px;
$fontSizeDefault = 14px;
$fontSizeSm = 12px;
$rgbaColorLight = rgba(0, 0, 0, 0.45);
$rgbaColor = rgba(0, 0, 0, 0.65);
$rgbaColorBig = rgba(0, 0, 0, 0.85);
/* ********** 其他变量end *********** */
/* ********** 颜色变量 *********** */
$mainColor = #3b77e3;
// 主辅色
$mainAidColor = #5B8CFF;
$mainAidColorLight = #e6f7ff;
// 主绿色
$mainGreenColor = #52c41a;
// 主红色
$mainRedColor = #f5222d;

/* ********** 颜色变量 end *********** */
.zcl-main {
  width: 100%;
  height: 100%;
}

.zcl-layout {
  display: flex;
  flex: 1;
  flex-direction: row;
  background: #f0f2f5;
}

.zcl-content {
  padding: 65px 24px;
  position: absolute;
  top: 64px;
  right: 0;
  bottom: 0;
  overflow-x: hidden;
  overflow-y: auto;
  z-index: 1;
  transition: left 0.3s;

  /* 通用 view class */
  .zcl-bg-fff-row {
    background-color: #fff;
    border-radius: 2px;
    transition: all 0.4s;

    &:hover {
      box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
      transform: translate3d(0, -2px, 0);
      cursor: pointer;
    }
  }

  /* 统计 class */
  .zcl-card {
    padding: 20px 24px 8px;

    .mate {
      color: $rgbaColorLight;
      font-size: 14px;
      position: relative;
      line-height: 22px;
      height: 22px;
    }

    .total {
      overflow: hidden;
      -o-text-overflow: ellipsis;
      text-overflow: ellipsis;
      word-break: break-all;
      white-space: nowrap;
      color: $rgbaColorBig;
      margin-top: 4px;
      font-size: 30px;
      line-height: 38px;
      height: 38px;
    }

    .content {
      height: 46px;
      display: flex;
      align-items: flex-end;
    }

    .footer {
      border-top: 1px solid #e8e8e8;
      padding-top: 9px;
      margin: 8px 0px;
      display: flex;
      justify-content: space-between;

      i {
        font-size: 18px;
        position: relative;
        top: 2px;
        left: 2px;
      }
    }
  }

  /* cms 首页 line */
  .line-echart {
    height: 400px;
    padding-top: 20px;
    margin-top: 24px;
  }

  /* cms 首页地图 */
  .map-echart {
    height: 400px;
    padding-top: 20px;
    width: 100%;
    display: flex;

    .region-pv {
      width: 400px;
      margin-top: -10px;
      margin-left: 20px;

      h3 {
        margin-bottom: 15px;
      }
    }
  }
}

/* 统计区域 */
.analysis {
  margin-bottom: 24px;
  margin-left: -12px;
  margin-right: -12px;

  .el-col-6 {
    padding-right: 12px;
    padding-left: 12px;
  }
}

.zcl-cursor {
  cursor: pointer;
}

/* 文本溢出隐藏 */
.zcl-one-row {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.zcl-two-row {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/* 卡片 */
.zcl-card {
  font-family: 'Helvetica Neue For Number', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: $rgbaColor;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  list-style: none;
  background: #fff;
  border-radius: 2px;
  position: relative;
  transition: all 0.3s;
}

/* 表单 */
.zcl-ruleForm {
  width: calc(50% - 80px);

  .zcl-form-button {
    margin-top: 20px;
  }

  .btn-clicked:after {
    content: '';
    position: absolute;
    top: -1px;
    left: -1px;
    bottom: -1px;
    right: -1px;
    border-radius: inherit;
    border: 0 solid #1890ff;
    opacity: 0.4;
    -webkit-animation: buttonEffect 0.4s;
    animation: buttonEffect 0.4s;
    display: block;
  }
}

/* 按钮 */
.zcl-btn-primary {
  background-color: #2d8cf0 !important;
  border-color: #2d8cf0 !important;
  transition: all .3s;

  &:hover {
    background-color: #57a3f3 !important;
    border-color: #57a3f3 !important;
  }

  span {
      color: #fff !important;
  }
}
