/* ********** 其他变量 *********** */
$fontSize = 16px;
$fontSizeDefault = 14px;
$fontSizeSm = 12px;
$rgbaColorLight = rgba(0, 0, 0, 0.45);
$rgbaColor = rgba(0, 0, 0, 0.65);
$rgbaColorBig = rgba(0, 0, 0, 0.85);
/* ********** 其他变量end *********** */
/* ********** 颜色变量 *********** */
$mainColor = #1890ff;
// 主辅色
$mainAidColor = #40a9ff;
$mainAidColorLight = #e6f7ff;
// 主绿色
$mainGreenColor = #52c41a;
// 主红色
$mainRedColor = #f5222d;

/* ********** 颜色变量 end *********** */
/* 滚动条的空槽背景 */
::-webkit-scrollbar-track-piece {
  width: 6px;
  height: 4px;
  transition: all 0.3s;
  background-color: #f0f0f0;
}

::-webkit-scrollbar {
  width: 6px;
  height: 4px;
  transition: all 0.3s;

  &:hover {
  }
}

::-webkit-scrollbar-thumb {
  width: 6px;
  height: 4px;
  background-color: #bcbcbc;
  transition: all 0.3s;

  &:hover {
    width: 6px;
    background-color: $mainColor;
  }
}

/* 初始化 */
html {
  font-family: sans-serif;
  line-height: 1.15;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-size: 14px;
  line-height: 1.5;
  color: $rgbaColor;
  background-color: #f7f7f7;
  overflow-x: hidden;
  width: 100%;
  height: 100%;
  color: #2c3e50;
}

code {
  font-family: source-code-pro, Menlo, Monaco, Consolas, 'Courier New', monospace;
}

article, aside, blockquote, body, button, dd, details, div, dl, dt, fieldset, figcaption, figure, footer, form, h1, h2, h3, h4, h5, h6, header, hgroup, hr, input, legend, li, menu, nav, ol, p, section, td, textarea, th, ul {
  margin: 0;
  padding: 0;
}

a {
  &:link {
    text-decoration: none;
    color: $rgbaColor;
  }

  &:visited {
    text-decoration: none;
    color: $rgbaColor;
  }

  &:hover {
    text-decoration: none;
  }

  &:active {
    text-decoration: none;
    color: $rgbaColor;
  }
}

ol, ul {
  list-style: none;
}

*:focus {
  outline: none;
}

#app {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* icon */
.icon {
  display: inline-block;
  position: relative;
  font-style: normal;
  vertical-align: baseline;
  text-align: center;
  text-transform: none;
  line-height: 1;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
}

/* loading icon */
.el-loading-spinner i {
  font-size: 20px;
}

/* 主色 */
.main-color {
  color: $mainColor;
}

.main-bg-color {
  background-color: $mainColor;
}

.main-broder-color {
  border-color: $mainColor;
}

.main-color-red {
  color: $mainRedColor;
}

.main-color-lv {
  color: $mainGreenColor;
}

/* 主色鼠标移上 */
.main-hover-color {
  &:hover {
    color: $mainColor;
  }
}

.main-hover-bg {
  &:hover {
    background-color: $mainColor;
  }
}

/* 主辅色 */
.main-aid-color {
  color: $mainAidColor;
}

.main-aid-bg-color {
  background-color: $mainAidColor;
}

.main-aid-border-color {
  border-color: $mainAidColor;
}

.main-aid-hover-bg {
  &:hover {
    background-color: $mainAidColorLight;
  }
}

/* * 覆盖 element-ui 样式 * */
/* tabs 的线条、选中颜色 */
.el-tabs__nav-wrap {
  &:after {
    height: 1px !important;
    background-color: #e8e8e8 !important;
  }
}

.el-tabs__active-bar {
  background-color: $mainColor !important;
}

/* input */
.el-input--small {
  height: 32px;

  .el-input__inner {
    border: 1px solid #d9d9d9;
    list-style: none;
    transition: all 0.3s !important;

    &:focus {
      border-color: $mainAidColor;
      outline: 0;
      box-shadow: 0 0 0 2px rgba(24, 144, 255, 0.2);
    }

    &:hover {
      border-color: #40a9ff !important;
    }
  }
}

/* 按钮 */
.el-button {
  transition: all 0.3s !important;
  padding: 8px 15px !important;

  span {
    color: $rgbaColor;
    transition: all 0.3s;
  }

  &:hover {
    border-color: $mainAidColor !important;
    background-color: transparent !important;

    span {
      color: $mainAidColor;
    }
  }
}

.el-button--mini, .el-button--small {
  border-radius: 4px !important;
}

// 默认按钮
.el-button--primary {
  background-color: $mainColor

  span {
    color: #fff
  }

  &:hover {
    border-color: $mainAidColor !important;
    background-color: $mainAidColor !important;

    span {
      color: #fff;
    }
  }
}

/* message 提示 */
.el-message {
  min-width: 20px !important;
  padding: 10px 46px 10px 16px !important;
  border-radius: 4px !important;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2) !important;
  background: #fff !important;
  border-color: transparent !important;

  .el-icon-success {
    color: #00a854 !important;
  }

  .el-message__content {
    position: relative;
    top: -1px;
    color: $rgbaColor !important;
    font-size: 13px !important;
  }
}

/* tabs */
.el-tabs__item {
  color: $rgbaColor !important;
}

.el-tabs__item.is-active {
  color: $mainAidColor !important;
}

/* 表格 */
.el-table thead {
  color: $rgbaColorBig !important;
}

.el-table--border th {
  background-color: #f7f7f7;
}

.el-table--enable-row-hover .el-table__body tr {
  transition: all 0.3s;
}

.el-table--enable-row-hover .el-table__body tr:hover>td {
  background-color: #ecf6fd !important;
}

// card 卡片
.el-card {
  border: solid 1px #ebebeb;
  border-radius: 4px;
  display: flex;
  color: #545763;
  margin-bottom: 20px;
}

.el-card.is-always-shadow {
  box-shadow: none;
}

.el-card.is-hover-shadow {
  &:hover {
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
    transform: translate3d(0, -2px, 0);
  }
}

.el-card__body {
  padding: 6px 12px;
  width: 100%;
}

.icon {
  /* 通过设置 font-size 来改变图标大小 */
  width: 1em;
  height: 1em;
  /* 图标和文字相邻时，垂直对齐 */
  vertical-align: -0.15em;
  /* 通过设置 color 来改变 SVG 的颜色/fill */
  fill: currentColor;
  /* path 和 stroke 溢出 viewBox 部分在 IE 下会显示
  normalize.css 中也包含这行 */
  overflow: hidden;
  position: relative;
}

// element-ui 的 el-checkbox-group 样式
.form-container {
  padding: 10px;

  .el-checkbox-group:after {
    clear: both;
    visibility: hidden;
    font-size: 0;
    height: 0;
  }

  .el-select .el-input {
    width: 380px;
  }

  .el-form {
    width: 460px;
  }

  .line {
    text-align: center;
  }

  .el-checkbox-group {
    width: 320px;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .el-checkbox-group {
    .el-checkbox {
      float: left;
      width: 160px;
      padding-right: 20px;
      margin: 0;
      padding: 0;
    }

    .el-checkbox+.el-checkbox {
      margin-left: 0;
    }

    &:after, &:before {
      content: ' ';
      display: table;
    }
  }

  .form-container-normal {
    width: 460px;
  }

  .form-container-inline {
    width: auto;

    .el-input {
      width: 150px;
    }

    >* {
      margin-right: 10px;
    }
  }

  .fr {
    float: right;
  }
}
