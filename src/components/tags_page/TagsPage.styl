.tags-content {
    width: 100%;
    height: 35px;
    z-index: 2;
    padding-top: 5px;
    overflow: hidden;
    background: #f0f2f5;
    border: 1px solid #e8e8e8;
    box-shadow: 0 1px 4px rgba(0, 21, 41, 0.1);

    .el-tag {
        &:first-child {
            margin-left: 13px;
        }

        border: 1px solid #e9eaec;
        background: #fff;
        border-radius: 4px;
        margin: 0px 4px 2px 0px;
        color: rgba(0, 0, 0, 0.65);
        transition: all 0.2s linear;

        .tag-dot-inner {
            display: inline-block;
            width: 12px;
            height: 12px;
            margin-right: 8px;
            border-radius: 50%;
            background: #e9eaec;
            position: relative;
            top: 1px;
        }

        &:hover {
            box-shadow: 0px 6px 20px 0px rgba(0, 0, 0, 0.1);
        }

        .el-icon-close {
            color: #666;
        }
    }

    .tags-outer-scroll-con {
        position: relative;
        box-sizing: border-box;
        padding-right: 120px;
        width: 100%;
        height: 100%;

        .tags-inner-scroll-body {
            position: absolute;
            padding: 2px 10px;
            overflow: visible;
            white-space: nowrap;
            transition: left 0.3s ease;
        }

        .close-all-tag-con {
            position: absolute;
            right: 0;
            top: 0;
            box-sizing: border-box;
            padding-top: 8px;
            text-align: center;
            width: 110px;
            height: 100%;
            background: white;
            box-shadow: -3px 0 15px 3px rgba(0, 0, 0, 0.1);
            z-index: 10;
        }
    }
}