header {
    width: 100%;
    height: 64px;
    line-height: 64px;
    position: relative;
    padding: 0px 12px 0px 0px;
    background: rgb(255, 255, 255);
    display: flex;

    .sider {
        width: 201px;
        height: 100%;
        overflow: auto;
        box-shadow: rgba(0, 21, 41, 0.35) 2px 0px 6px;
    }

    .con {
        width: calc(100% - 201px);
        height: 100%;
        position: relative;
        box-shadow: 0 1px 4px rgba(0, 21, 41, 0.08);
        display: flex;
        justify-content: space-between;

        .trigger {
            font-size: 30px;
            line-height: 64px;
            cursor: pointer;
            -webkit-transition: all 0.3s;
            -o-transition: all 0.3s;
            transition: all 0.3s;
            padding: 0 24px;

            &:hover {
                background: #e6f7ff;
            }
        }

        .rights {
            padding: 0 12px 0 0;
        }

        .action-right {
            cursor: pointer;
            padding: 0 12px;
            display: inline-block;
            -webkit-transition: all 0.3s;
            -o-transition: all 0.3s;
            transition: all 0.3s;
            height: 100%;

            &:hover {
                background: #e6f7ff;
            }

            .avatar {
                margin: 20px 8px 20px 0;
                color: #1890ff;
                background: rgba(255, 255, 255, 0.85);
                vertical-align: middle;
            }
        }
    }
}