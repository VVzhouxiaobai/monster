/* 滚动条的空槽背景 */
::-webkit-scrollbar-track-piece {
  width: 6px;
  height: 4px;
  transition: all 0.3s;
  background-color: #f0f0f0;
}

::-webkit-scrollbar {
  width: 6px;
  height: 4px;
  transition: all 0.3s;

  &:hover {
  }
}

::-webkit-scrollbar-thumb {
  width: 6px;
  height: 4px;
  background-color: #bcbcbc;
  transition: all 0.3s;

  &:hover {
    width: 6px;
    background-color: #3b77e3;
  }
}

/* 初始化 */
html {
  font-family: sans-serif;
  line-height: 1.15;
}

body {
  font-family: 'Helvetica Neue For Number', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: rgba(0, 0, 0, 0.65);
  background-color: #f0f2f5;
  overflow-x: hidden;
  width: 100%;
  height: 100%;
}

article, aside, blockquote, body, button, dd, details, div, dl, dt, fieldset, figcaption, figure, footer, form, h1, h2, h3, h4, h5, h6, header, hgroup, hr, input, legend, li, menu, nav, ol, p, section, td, textarea, th, ul {
  margin: 0;
  padding: 0;
}

a {
  &:link {
    text-decoration: none;
    color: rgba(0, 0, 0, 0.65);
  }

  &:visited {
    text-decoration: none;
    color: rgba(0, 0, 0, 0.65);
  }

  &:hover {
    text-decoration: none;
  }

  &:active {
    text-decoration: none;
    color: rgba(0, 0, 0, 0.65);
  }
}

ol, ul {
  list-style: none;
}

*:focus {
  outline: none;
}

#app {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* icon */
.icon {
  display: inline-block;
  position: relative;
  font-style: normal;
  vertical-align: baseline;
  text-align: center;
  text-transform: none;
  line-height: 1;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
}

/* loading icon */
.el-loading-spinner i {
  font-size: 20px;
}

/* 主色 */
.main-color {
  color: #3b77e3;
}

.main-bg-color {
  background-color: #3b77e3;
}

.main-broder-color {
  border-color: #3b77e3;
}

.main-color-red {
  color: #f5222d;
}

.main-color-lv {
  color: #52c41a;
}

/* 主色鼠标移上 */
.main-hover-color {
  &:hover {
    color: #3b77e3;
  }
}

.main-hover-bg {
  &:hover {
    background-color: #3b77e3;
  }
}

/* 主辅色 */
.main-aid-color {
  color: #5B8CFF;
}

.main-aid-bg-color {
  background-color: #5B8CFF;
}

.main-aid-border-color {
  border-color: #5B8CFF;
}

.main-aid-hover-bg {
  &:hover {
    background-color: #e6f7ff;
  }
}
