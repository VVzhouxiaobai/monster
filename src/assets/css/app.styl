/* ********** 其他变量 *********** */
$fontSize = 16px;
$fontSizeDefault = 14px;
$fontSizeSm = 12px;
$rgbaColorLight = rgba(0, 0, 0, 0.45);
$rgbaColor = rgba(0, 0, 0, 0.65);
$rgbaColorBig = rgba(0, 0, 0, 0.85);
/* ********** 其他变量end *********** */
/* ********** 颜色变量 *********** */
$mainColor = #3b77e3;
// 主辅色
$mainAidColor = #5B8CFF;
$mainAidColorLight = #e6f7ff;
// 主绿色
$mainGreenColor = #52c41a;
// 主红色
$mainRedColor = #f5222d;

/* ********** 颜色变量 end *********** */
.main {
  width: 100%;
  height: 100%;
}

.zcl-layout {
  display: flex;
  flex: 1;
  flex-direction: row;
  background: #f0f2f5;
}

// 右侧
.z_content {
  width calc(100% - 160px)
  position relative
  min-height: 100vh
  transition: all .3s ease-in-out;

  // 主体内容
  .z_body {
    padding: 15px 15px 30px 15px
  }

  /* 统计 class */
  .zcl-card {
    padding: 20px 24px 8px;

    .mate {
      color: $rgbaColorLight;
      font-size: 14px;
      position: relative;
      line-height: 22px;
      height: 22px;
    }

    .total {
      overflow: hidden;
      -o-text-overflow: ellipsis;
      text-overflow: ellipsis;
      word-break: break-all;
      white-space: nowrap;
      color: $rgbaColorBig;
      margin-top: 4px;
      font-size: 30px;
      line-height: 38px;
      height: 38px;
    }

    .content {
      height: 46px;
      display: flex;
      align-items: flex-end;
    }

    .footer {
      border-top: 1px solid #e8e8e8;
      padding-top: 9px;
      margin: 8px 0px;
      display: flex;
      justify-content: space-between;

      i {
        font-size: 18px;
        position: relative;
        top: 2px;
        left: 2px;
      }
    }
  }
}

.z-cursor {
  cursor: pointer;
}

/* 文本溢出隐藏 */
.zcl-one-row {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.zcl-two-row {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/* 表单 */
.zcl-ruleForm {
  width: calc(50% - 80px);

  .zcl-form-button {
    margin-top: 20px;
  }

  .btn-clicked:after {
    content: '';
    position: absolute;
    top: -1px;
    left: -1px;
    bottom: -1px;
    right: -1px;
    border-radius: inherit;
    border: 0 solid #1890ff;
    opacity: 0.4;
    -webkit-animation: buttonEffect 0.4s;
    animation: buttonEffect 0.4s;
    display: block;
  }
}

/* 按钮 */
.submit-item {
  padding-top: 15px
}
