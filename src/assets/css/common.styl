/* ********** 其他变量 *********** */
$fontSize = 16px;
$fontSizeDefault = 14px;
$fontSizeSm = 12px;
$rgbaColorLight = rgba(0, 0, 0, 0.45);
$rgbaColor = rgba(0, 0, 0, 0.65);
$rgbaColorBig = rgba(0, 0, 0, 0.85);
/* ********** 其他变量end *********** */
/* ********** 颜色变量 *********** */
$mainColor = #3b77e3;
// 主辅色
$mainAidColor = #5B8CFF;
$mainAidColorLight = #e6f7ff;
// 主绿色
$mainGreenColor = #52c41a;
// 主红色
$mainRedColor = #f5222d;

/* ********** 颜色变量 end *********** */
/* 滚动条的空槽背景 */
::-webkit-scrollbar-track-piece {
  width: 6px;
  height: 4px;
  transition: all 0.3s;
  background-color: #f0f0f0;
}

::-webkit-scrollbar {
  width: 6px;
  height: 4px;
  transition: all 0.3s;

  &:hover {
  }
}

::-webkit-scrollbar-thumb {
  width: 6px;
  height: 4px;
  background-color: #bcbcbc;
  transition: all 0.3s;

  &:hover {
    width: 6px;
    background-color: $mainColor;
  }
}

/* 初始化 */
html {
  font-family: sans-serif;
  line-height: 1.15;
}

body {
  font-family: 'Helvetica Neue For Number', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: $rgbaColor;
  background-color: #f0f2f5;
  overflow-x: hidden;
  width: 100%;
  height: 100%;
}

article, aside, blockquote, body, button, dd, details, div, dl, dt, fieldset, figcaption, figure, footer, form, h1, h2, h3, h4, h5, h6, header, hgroup, hr, input, legend, li, menu, nav, ol, p, section, td, textarea, th, ul {
  margin: 0;
  padding: 0;
}

a {
  &:link {
    text-decoration: none;
    color: $rgbaColor;
  }

  &:visited {
    text-decoration: none;
    color: $rgbaColor;
  }

  &:hover {
    text-decoration: none;
  }

  &:active {
    text-decoration: none;
    color: $rgbaColor;
  }
}

ol, ul {
  list-style: none;
}

*:focus {
  outline: none;
}

#app {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* icon */
.icon {
  display: inline-block;
  position: relative;
  font-style: normal;
  vertical-align: baseline;
  text-align: center;
  text-transform: none;
  line-height: 1;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
}

/* loading icon */
.el-loading-spinner i {
  font-size: 20px;
}

/* 主色 */
.main-color {
  color: $mainColor;
}

.main-bg-color {
  background-color: $mainColor;
}

.main-broder-color {
  border-color: $mainColor;
}

.main-color-red {
  color: $mainRedColor;
}

.main-color-lv {
  color: $mainGreenColor;
}

/* 主色鼠标移上 */
.main-hover-color {
  &:hover {
    color: $mainColor;
  }
}

.main-hover-bg {
  &:hover {
    background-color: $mainColor;
  }
}

/* 主辅色 */
.main-aid-color {
  color: $mainAidColor;
}

.main-aid-bg-color {
  background-color: $mainAidColor;
}

.main-aid-border-color {
  border-color: $mainAidColor;
}

.main-aid-hover-bg {
  &:hover {
    background-color: $mainAidColorLight;
  }
}

/* * 覆盖 element-ui 样式 * */
/* tabs 的线条、选中颜色 */
.el-tabs__nav-wrap {
  &:after {
    height: 1px !important;
    background-color: #e8e8e8 !important;
  }
}

.el-tabs__active-bar {
  background-color: $mainColor !important;
}

/* input */
.el-input--small {
  height: 32px;

  .el-input__inner {
    border: 1px solid #d9d9d9;
    list-style: none;
    transition: all 0.3s !important;

    &:focus {
      border-color: #40a9ff;
      outline: 0;
      box-shadow: 0 0 0 2px rgba(24, 144, 255, 0.2);
    }

    &:hover {
      border-color: #40a9ff !important;
    }
  }
}

/* 按钮 */
.el-button {
  transition: all 0.3s !important;
  padding: 8px 15px !important;
  border-color: #d9d9d9;

  span {
    color: $rgbaColor;
    transition: all 0.3s;
  }

  &:hover {
    border-color: #40a9ff !important;
    background-color: transparent !important;

    span {
      color: #409EFF;
    }
  }
}

.el-button--mini, .el-button--small {
  border-radius: 4px !important;
}

.el-button--primary {
  transition: all 0.3s;

  &:hover {
    border-color: #40a9ff !important;
    background-color: #40a9ff !important;
  }
}

/* message 提示 */
.el-message {
  min-width: 20px !important;
  padding: 10px 46px 10px 16px !important;
  border-radius: 4px !important;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2) !important;
  background: #fff !important;
  border-color: transparent !important;

  .el-icon-success {
    color: #00a854 !important;
  }

  .el-message__content {
    position: relative;
    top: -1px;
    color: $rgbaColor !important;
    font-size: 13px !important;
  }
}

/* tabs */
.el-tabs__item {
  color: $rgbaColor !important;
}

.el-tabs__item.is-active {
  color: #409EFF !important;
}

/* 表格 */
.el-table thead {
  color: $rgbaColorBig !important;
}

.el-table--border th {
  background-color: #f7f7f7;
}

.el-table--enable-row-hover .el-table__body tr {
  transition: all 0.3s;
}

.el-table--enable-row-hover .el-table__body tr:hover>td {
  background-color: #ecf6fd !important;
}