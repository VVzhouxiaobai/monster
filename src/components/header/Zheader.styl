header {
    width: 100%;
    height: 100%;
    position: relative;
    padding: 0px 12px 0px 0px;
    background: rgb(255, 255, 255);
    display: flex;
    flex-direction: column;

    .con {
        width: 100%;
        height: 64px;
        line-height: 64px;
        position: relative;
        box-shadow: 0 1px 4px rgba(0, 21, 41, 0.1);
        z-index: 2;
        transition: padding 0.3s;
        display: flex;
        flex-direction: row;

        .zcl-nav {
            .is-active {
                color: rgba(0, 0, 0, 0.75);

                &:after {
                    opacity: 1 !important;
                    transform: scaleY(1) !important;
                    transition: transform 0.15s cubic-bezier(0.645, 0.045, 0.355, 1), opacity 0.15s cubic-bezier(0.645, 0.045, 0.355, 1), -webkit-transform 0.15s cubic-bezier(0.645, 0.045, 0.355, 1) !important;
                }
            }

            ul {
                display: flex;

                li {
                    height: 64px;
                    padding: 0px 20px;
                    position: relative;
                    font-size: 14px;
                    color: rgba(0, 0, 0, 0.5);
                    font-family: 'Myriad Pro', 'Helvetica Neue', Arial, Helvetica, sans-serif;

                    i {
                        position: relative;
                        margin-right: 6px;
                    }

                    &:hover {
                        color: rgba(0, 0, 0, 0.75);

                        &:after {
                            opacity: 1;
                            transform: scaleX(1);
                            transition: transform 0.15s cubic-bezier(0.645, 0.045, 0.355, 1), opacity 0.15s cubic-bezier(0.645, 0.045, 0.355, 1), -webkit-transform 0.15s cubic-bezier(0.645, 0.045, 0.355, 1);
                        }
                    }

                    &:after {
                        content: '';
                        position: absolute;
                        left: 0;
                        bottom: -2px;
                        width: 100%;
                        height: 4px;
                        border-bottom: 4px solid #4fe3c1;
                        transform: scaleX(0.0001);
                        opacity: 0;
                        transition: transform 0.15s cubic-bezier(0.215, 0.61, 0.355, 1), opacity 0.15s cubic-bezier(0.215, 0.61, 0.355, 1);
                    }
                }
            }
        }

        .trigger {
            display: inline-block;
            font-size: 26px;
            line-height: 64px;
            cursor: pointer;
            transition: all 0.3s;
            padding: 0 24px;

            &:hover {
                background: #e6f7ff;
            }
        }

        .rights {
            position: absolute;
            right: 0;
            top: 0;
            height: 100%;
            padding: 0px 20px;

            .zcl-message {
                padding: 24px 0px;
                height: 100%;
                transition: all 0.3s;

                i {
                    position: relative;
                    top: 3px;
                    left: 0;
                    font-size: 20px;
                    padding: 0px 20px;
                }

                .el-badge__content.is-fixed {
                    top: 25px;
                    right: 28px;
                }
            }

            .action-right {
                cursor: pointer;
                padding: 0 12px;
                display: inline-block;
                transition: all 0.3s;
                height: 100%;

                .el-icon-arrow-up {
                    margin-left: 5px;
                    transition: all 0.3s;
                }

                .avatar {
                    margin: 20px 8px 20px 0;
                    color: #1890ff;
                    background: rgba(255, 255, 255, 0.85);
                    vertical-align: middle;
                }
            }
        }
    }
}

