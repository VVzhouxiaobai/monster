.zcl-header-message-box {
    width: 335px;

    .el-tabs--border-card {
        box-shadow: none;
        border: none;

        .el-tabs__header {
            background: none;
            border-bottom: 1px solid #e8e8e8;

            .el-tabs__nav-scroll {
                display: flex;
                justify-content: center;
            }

            .el-tabs__item {
                margin: 0px 32px;
                padding: 0px 16px;
                border-left: none;
                border-right: none;
            }

            .is-active {
                border-bottom: 2px solid #3b77e3;
                border-left: none;
                border-right: none;
            }
        }

        .el-tabs__content {
            padding: 0px;

            ul {
                max-height: 400px;
                overflow: auto;

                li {
                    display: flex;
                    align-items: center;
                    padding-top: 12px;
                    padding-bottom: 12px;
                    transition: all 0.3s;
                    overflow: hidden;
                    padding-left: 24px;
                    padding-right: 24px;
                    background: #fff;
                    border-bottom: 1px solid #e8e8e8;
                    align-items: flex-start;

                    &:hover {
                        background-color: #e6f7ff;
                    }

                    img {
                        margin-right: 16px;
                    }

                    .content {
                        display: flex;
                        flex-direction: column;

                        .title {
                            color: rgba(0, 0, 0, 0.65);
                            font-size: 14px;
                            line-height: 22px;
                        }

                        .desc {
                            width: 230px;
                            color: rgba(0, 0, 0, 0.45);
                            font-size: 14px;
                            line-height: 22px;
                            margin-bottom: 4px;
                        }

                        .end {
                            color: rgba(0, 0, 0, 0.45);
                            font-size: 12px;
                            line-height: 22px;
                        }
                    }
                }
            }

            .face {
                display: flex;
                flex: 1;
                height: 36px;
                line-height: 46px;
                text-align: center;
                color: rgba(0, 0, 0, 0.65);
                border-radius: 0 0 4px 4px;
                transition: all 0.3s;

                .more {
                    width: 50%;

                    &:hover {
                        color: #3b77e3;
                    }
                }

                .clear {
                    width: 50%;

                    &:hover {
                        color: #3b77e3;
                    }
                }
            }
        }
    }
}